/* pages/settings/index.wxss */

.menu_section{
  padding-top: 10rpx;
  font-size: 30rpx;
  color: #1990ff;
  margin-left: 25rpx;
}

.setmenu{
  margin-top: 15rpx;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: stretch;
  background-color: #FFF;
}

.menu{
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #d2d2d2;
  padding-right: 25rpx;
  box-sizing: border-box;
  margin-left: 25rpx;
}

.menu_arrow{
  width: 40rpx;
  height: 40rpx;
}

.menu_text{
  flex: 1;
  padding: 15rpx 0rpx;
  font-size: 32rpx;
}

.set_tapped{
  background-color: #d2d2d2;
}