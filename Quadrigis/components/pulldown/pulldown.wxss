 .select_box{
  position: relative;
  
 }
 .select{
  box-sizing: border-box;
  display: flex;
  align-items: stretch;
 }
 .select_text{
  flex: 1;
 }
 .select_img{
  width: 24rpx;
  height: 24rpx;
  display: block;
  transition:transform 0.3s;
  align-self: center;
 }
 .select_img_rotate{
  transform:rotate(180deg); 
 }
 .option_box{
  z-index: 99;
  position: absolute;
  margin-top: 12rpx;
  width: 100%;
  border:1px solid #d2d2d2;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: #fff;
 }
 .option{
  z-index: 99;
  display: block;
  font-size: 30rpx;
  border-bottom: 1px solid #d2d2d2;
  padding: 10rpx;
 }
 .mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 98;
  background: rgba(255,255,255,0);
 }